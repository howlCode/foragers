<section class="section">
  <div class="container is-fluid has-text-centered">
    <h1 class="title has-text-primary">Thank You!</h1>
    <h3 class="subtitle">You will receive a confirmation email for your order. Expect delivery in 5-7
      business days.</h3>
    <br>
    <h3 class="subtitle">Order Summary</h3>
    <div class="columns is-multiline">
      <% @order.order_items.each do |item| %>
      <div class="column is-one-quarter">
        <div>
          <%= image_tag item.product.image.url(:thumb), class: "checkout-image" %>
        </div>
        <p>
          <%= item.product.name %>
        </p>
        <div class="has-text-centered quantity">
          <span id="to-grow">Quantity:
            <%= item.quantity %></span>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <p class="has-text-centered">Total:
    <%= number_to_currency @order.total %>
  </p>
</section>