
<%= form_with(model: @shroom) do |form| %>

    <% if @shroom.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@shroom.errors.count, "error") %>
          prohibited this mushroom from being saved to the database:
        </h2>
        <ul>
          <% @shroom.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>

    <p>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </p>

    <p>
      <%= form.submit %>
    </p>

<% end %>