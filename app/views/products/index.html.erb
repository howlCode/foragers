<%= render 'shop-header' %>
<br>
<section class="section"> 
	<div class="container is-fluid has-text-centered">
		<h1 class="title is-hidden-mobile">Shroom Shop</h1>
		<% if !user_signed_in? %>
      <%= link_to user_session_path do %>
        <span class="button is-medium is-hidden-mobile is-link">Log in to create an order!</span>
        <span class="button is-small is-hidden-desktop is-hidden-tablet is-hidden-widescreen is-link has-text-centered">Log in to create an order!</span>
      <% end %>
    <% end %> 
	</div>
	<br>
	<div class="container is-fluid shop-grid">
		<% @products.each do |product| %>
			<div class="shop-grid-item">
				<div class="shop-image">
					<%= link_to product_path(product), remote: true do %>
					<%= image_tag product.image.url(:shop_size) %>
				<% end %>
				</div>
				<div class="nav-tools has-text-centered">
					<%= print_stock(product.stock) %>
					<% if user_signed_in? %>
						<%= button_to "Add to Cart", order_items_path(product_id: product.id), class: "button is-primary is-small" %>
					<% end %>
				</div>
				<div class="name">
					<p class="subtitle"><%= product.name %>(<%= number_to_currency product.price %>)</p>
				</div>
			</div>
		<% end %>
	</div>
	<div id='product-content'></div>
</section>