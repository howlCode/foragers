<section class="section">
  <%= render 'shop-header' %>
	<div class="container is-fluid has-text-centered">
		<h1 class="title">Shroom Shop</h1>
	</div>
	<br>
	<div class="container is-fluid shop-grid">
		<div class="shop-grid-item">
			<div class="shop-image">
				<%= link_to product_path(@product) do %>
				<%= image_tag @product.image.url(:medium) %>
			<% end %>
			</div>
			<div class="name">
				<p class="subtitle"><%= @product.name %>(<%= number_to_currency @product.price %>)</p>
			</div>
			<div class="has-text-left shop-grid-description">
				<%= @product.description %>
			</div>
			<div class="nav-tools">
				<p class="has-text-left is-uppercase"><%= print_stock(@product.stock) %></p>
				<% if user_signed_in? %>
					<%= button_to "Add to Cart", order_items_path(product_id: @product.id), class: "button is-primary is-small" %>
				<% end %>
			</div>
		</div>
	</div>
</section>